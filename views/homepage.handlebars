<div class="row" id="posts">
    {{#each blogs as |blog|}}
    <div class="card" id="blogPost">
        <div class="card-header" id="card-title">
            <h3 id="blogTitle">{{blog.title}}<span id="blogAuthor">Posted by {{blog.user.name}} on</span></h3>
        </div>
        <div class="card-body" id="blogContent">
            <p class="card-text" >{{blog.content}}</p>
        </div>
        <div class="card-footer hide-comments" style="text-align:center;">
            Comments â–¼
        </div>
        <div class="comments">
            {{#each comments as |comment|}}
                <div class="card">
                    {{> comment-details}}
                    <p> - {{blog.user.name}} on {{formatted_date created_at}}</p>
                    <hr>
                </div>
            {{/each}}
            <div class="card" id="addNewComment">
                <textarea name="yourComment" id="yourComment" value={{blog.id}} cols="30" rows="3" placeholder="Add your comment!"></textarea>
                <button class="btn btn-dark submitComment">Submit</button>
            </div>
        </div>
    </div>
    {{/each}}
</div>

<script src="/js/show-comments.js"></script>
